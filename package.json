{
  "name": "@xtr-dev/zod-rpc",
  "version": "0.1.0",
  "description": "A TypeScript RPC library built with Zod for type-safe remote procedure calls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "example:contracts:server": "npm run build && node dist/examples/contracts/server.js",
    "example:contracts:client": "npm run build && node dist/examples/contracts/client.js",
    "example:http:server": "npm run build && node dist/examples/http/server.js",
    "example:websocket:server": "npm run build && node dist/examples/websocket/server.js",
    "example:dev": "npm run build && vite"
  },
  "keywords": [
    "rpc",
    "zod",
    "typescript",
    "validation",
    "schema",
    "remote-procedure-call",
    "websocket",
    "webrtc",
    "http",
    "type-safe",
    "runtime-validation"
  ],
  "author": "xtr.dev <contact@xtr.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xtr-dev/zod-rpc.git"
  },
  "bugs": {
    "url": "https://github.com/xtr-dev/zod-rpc/issues"
  },
  "homepage": "https://github.com/xtr-dev/zod-rpc#readme",
  "dependencies": {
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "ws": "^8.18.3"
  }
}
